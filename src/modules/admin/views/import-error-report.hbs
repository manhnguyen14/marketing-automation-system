<div class="page-container">
    <div class="page-content">
        <div class="error-report-section">
            <h3>Error Details</h3>
            <pre style="background: #f8f9fa; padding: 15px; border: 1px solid #dee2e6; border-radius: 4px; overflow-x: auto; white-space: pre-wrap;">{{errorReport}}</pre>
        </div>

        <div class="error-report-actions" style="margin-top: 20px;">
            <a href="/admin/import-data/{{entity}}" class="btn btn-primary">Back to {{entityDisplayName}} Import</a>
            <form action="/admin/import-data/{{entity}}/clear-report" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-outline">Clear Report</button>
            </form>
        </div>
    </div>
</div>