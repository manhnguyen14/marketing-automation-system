        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .execution-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem;
        background: #f8f9fa;
        border-radius: 4px;
    }

    .execution-info strong {
        display: block;
        font-size: 0.9rem;
    }

    .execution-time {
        font-size: 0.8rem;
        color: #6c757d;
    }

