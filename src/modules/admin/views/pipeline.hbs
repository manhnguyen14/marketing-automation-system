        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .queue-items {
        font-size: 0.8rem;
        color: #6c757d;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: #6c757d;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    @media (max-width: 768px) {
        .pipeline-item {
            flex-direction: column;
            gap: 1rem;
            align-items: stretch;
        }

        .pipeline-actions {
            text-align: center;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .queue-stats {
            grid-template-columns: 1fr;
        }
    }
</style>